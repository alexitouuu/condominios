<%include ../templates/header%>

<div id="wrapper">
    <div align="center"><img src="/img/SIADCON.png" width="120" height="120" alt="logo" /></div>
	<div class="join">Login</div>
	<br>
    	<div class="lock"></div>
    <div class="clr"></div>
    <br>
    <div class="clr"><hr /></div><br><br><br>
                    		<div class="mail-text">Solo Podrán Usuarios registrados y el Administrador</div>
	<div class="forms">
                                    <form  action="/user/signin" class="form-horizontal" method="POST">
                    <fieldset>
                        <div class="form-group">
                            <span class="col-md-1 col-md-offset-2 text-center"><i class="fa fa-envelope-o bigicon"></i></span>
                            <div class="col-md-8">
                                <input required id="correo" name="username" type="text" placeholder="Correo" class="form-control">
                            </div>
                        </div>
                        <div class="form-group">
                            <span class="col-md-1 col-md-offset-2 text-center"><i class="fa fa-key"></i></span>
                            <div class="col-md-8">
                                <input id="password" name="password" type="password" placeholder="Password" class="form-control">
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-12 text-center">
                                <button type="submit" class="button" value="ENVIAR">Iniciar Sesión</button>
                            </div>
                        </div>
                    </fieldset>
                </form>
</div>
	</div>

 <% if(autenticacion.length > 0 ){%>
     <div class="alert alert-danger" role="alert"> <%= autenticacion%></div>
 <% } %>

